<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.sym.repository.UserRepository">

    <resultMap id="UserInfoMap" type="cn.sym.entity.UserInfo">
        <id property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="phone" column="phone"/>
        <result property="status" column="status"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <select id="findByUsername" parameterType="java.lang.String" resultMap="UserInfoMap">
        SELECT id, username, password, phone, status, create_time, update_time
        FROM user_info
        WHERE username = #{username}
    </select>

    <select id="existsByUsername" parameterType="java.lang.String" resultType="boolean">
        SELECT COUNT(*) > 0
        FROM user_info
        WHERE username = #{username}
    </select>

    <insert id="save" parameterType="cn.sym.entity.UserInfo" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user_info (username, password, phone, status, create_time, update_time)
        VALUES (#{username}, #{password}, #{phone}, #{status}, #{createTime}, #{updateTime})
    </insert>

    <select id="selectByUsername" parameterType="string" resultType="cn.sym.entity.UserDO">
        SELECT * FROM user_info WHERE username = #{username}
    </select>

</mapper>
